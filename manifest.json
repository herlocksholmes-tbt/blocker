{
    "name": "Tahribat",
    "version": "1.0",
    "description": "istenmeyen kullan覺c覺lardan kurtul",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.tahribat.com/forum/*"
            ],
            "css": [],
            "js": [
                "./forum.js"
            ],
            "run_at": "document_end",
            "match_about_blank": false
        },
        {
            "matches": [
                "*://*.tahribat.com/PM?action=Inbox*"
            ],
            "css": [],
            "js": [
                "./message.js"
            ],
            "run_at": "document_end",
            "match_about_blank": false
        }
    ],
    "page_action": {
        "default_title": "Tahribat.com Kullan覺c覺 Engelleme",
        "default_popup": "settings.html",
        "default_icon": "img/tbt-32.png"
    },
    "options_page": "options.html",
    "icons": {
        "16": "img/tbt-16.png",
        "32": "img/tbt-32.png"
    },
    "manifest_version": 2
}